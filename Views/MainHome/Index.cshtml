@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .padding-box {
            padding: 20px;
            margin: 20px 0;
            border-radius: 10px;
            color: white; /* Text color */
            text-align: center;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .hr-management {
            background-color: #007bff; /* Blue color */
        }

        .student-management {
            background-color: #6f42c1; /* Purple color */
        }
        /* Disable underline for links */
        a {
            text-decoration: none; /* Remove underline */
        }

            a:hover {
                text-decoration: underline; /* Optional: add underline on hover */
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">@ViewBag.Title</h2>

        <div class="padding-box hr-management">
            <h3>
                <a href="@Url.Action("ListEmployee", "Employee")" class="text-white">HR Management System</a>
            </h3>
        </div>

        <div class="padding-box student-management">
            <h3>
                <a href="@Url.Action("StudentIndex", "Student")" class="text-white">Student Management System</a>
            </h3>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
